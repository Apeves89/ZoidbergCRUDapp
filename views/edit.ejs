<!doctype html>
<html lang="en">
    <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/header.ejs')%>
      <div class="container-fluid vh-100" id="backdrop">
      <div class="container rounded-lg p-3" style="background-color: rgb(200, 196, 196,.9);border: 1px solid white;">
        <form action="/<%=artist.id%>?_method=PUT" method="POST">
            <div class="row">
                <div class="col">
                    <label for="InputTitle">Title</label>
                    <input type="text" class="form-control" name="title" id="InputTitle" value="<%=artist.title%>">
                </div>
                <div class="col">
                    <label for="InputName">Name</label>
                    <input type="text" class="form-control" name="name" id="InputName" value="<%=artist.name%>">
                  </div>
            </div>

            <div class="form-group" id="add-image-link">
                <label for="InputImageLink">Image URLs&emsp;</label><button type="button" class="btn btn-secondary rounded-pill" id="image-links">Click to add more Links</button>
                <%for(let i=0; i<artist.image.length; i++){%>
                    <%if(artist.image[i]=== ""){%>                        
                    <%}else{%>
                    <input type="url" class="form-control" name="image" id="InputImageLink" value="<%=artist.image[i]%>">
                    <%}%>                    
                    <%}%>
                <!-- <input type="text" class="form-control" name="image" id="InputImageLink" value="<%=artist.image%>"> -->
            </div>

            <div class="row">
            <div class="col">
                <label for="InputCategory">Project Category</label>
                <input type="text" class="form-control" name="type" id="InputCategory" value="<%=artist.type%>">
            </div>
            
            </div>

            <div class="form-group" id="add-links">
            <label for="InputAddLinks">Additional Links&emsp;</label><button type="button" class="btn btn-secondary rounded-pill" id="more-links">Click to add more Links</button>
              <%for(let i=0; i<artist.links.length; i++){%>
                <%if(artist.links[i]=== ""){%>
                    
                <%}else{%>
                <input type="url" class="form-control" name="links" id="InputAddLinks" value="<%=artist.links[i]%>">
                <%}%>
                
                <%}%>
            </div>

            <div class="form-group">
                <label for="InputDescription">Description</label>
                <textarea class="form-control" id="InputDescription" name="description" cols="2" rows="5"><%=artist.description%></textarea>
            </div>      

                <input type="submit" value="Submit Changes" class="btn btn-success rounded-pill"/>
            
        </form>
    </div>
</div>







    
  </body>
