<!doctype html>
<html lang="en">
    <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/header.ejs')%>
      <div class="container-fluid vh-100" id="backdrop">
    <div class="container rounded-lg p-3" style="background-color: rgb(186, 184, 184,.9);border: 1px solid white;">
        <form action="/" method="POST">
            <div class="row">
                <div class="col">
                    <label for="InputTitle">Project Title</label>
                    <input type="text" class="form-control" name="title" id="InputTitle" >
                </div>
                <div class="col">
                    <label for="InputName">Name</label>
                    <input type="text" class="form-control" name="name" id="InputName" >
                  </div>
            </div>
            
            <div class="form-group" id="add-image-link">
                <label for="InputImageLink">Project Images&emsp;</label>
                <button type="button" class="btn btn-secondary rounded-pill" id="image-links">Click to add more Images</button>
                <input type="url" class="form-control" name="image" id="InputImageLink">
            </div>

            <div class="row">
                <div class="col">
                    <label for="InputCategory">Project Category</label>
                    <input type="text" class="form-control" name="type" id="InputCategory" >
                </div>
                
            </div>

              <div class="form-group" id="add-links">
                <label for="InputAddLinks">Additional Links&emsp;</label>
                <button type="button" class="btn btn-secondary rounded-pill" id="more-links">Click to add more Links</button>
                <input type="url" class="form-control" name="links" id="InputAddLinks" value="http://">
            </div>

            <div class="form-group">
                <label for="InputDescription">Description</label>
                <textarea class="form-control" id="InputDescription" name="description" cols="2" rows="5" placeholder="Write a short description/summary about project"></textarea>
            </div>      

                <input type="submit" value="Submit Project Entry" class="btn btn-success rounded-pill"/>
            
        </form>
    </div>
</div>





    
  </body>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script>
</html>